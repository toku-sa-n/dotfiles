#
# File handle
#

snippet stdin "<STDIN>" iA
<STDIN>$0
endsnippet

#
# if
#

snippet if "if statement"
if ($1){
	$2
}$0
endsnippet

snippet el "else statement" i
else {
	$1
}$0
endsnippet

snippet ie "if ... else ..." A
if ($1){
	$2
} else {
	$3
}$0
endsnippet

#
# Iteration
#
snippet w "while" bA
while ($1){
	$2
}$0
endsnippet
