[uptime]
label=
command=uptime | sed 's/.*up \([^,]*\),.*/\1/'
color=#8fa1b3
interval=60

[memory]
label=.
command=echo -n $(free -h|awk 'match($0,/^Mem/){print $3 " / " $2}') ; echo -n "    " ;  echo -n $(free -b | awk 'match($0,/^Mem/){print int ($3*1000/$2)/10}') ; echo "%"
color=#8fa1b3
interval=1

[load average]
label=
command=echo "$(uptime | sed 's/.*load average: \(.*\)/\1/' | cut -d, -f1)/$(grep 'processor' /proc/cpuinfo | wc -l)"
color=#8fa1b3
interval=1

[network]
label=
command=[[ $(iw dev wlp4s0 link) != 'Not connected.' ]] && echo "$(iw dev wlp4s0 link | sed '/SSID/!d;s/ //g;s/[^:]*://') : -$(iw dev wlp4s0 link | grep signal | grep -o '[0-9]*')dBm"
color=#8fa1b3
interval=1

[lightness]
label=☀
command=xbacklight -get | xargs printf '%.0f%%'
color=#8fa1b3
interval=once
signal=2

[volume]
label=
interval=once
signal=1

[date]
label=
command=date +'%m/%d %H:%M'
color=#8fa1b3
interval=1

[battery]
interval=30
