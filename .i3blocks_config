[cpu_temperature]
command=~/dotfiles/cpu_temperature.sh
format=json
interval=1

[memory]
label=.
command=~/dotfiles/memory.sh
format=json
interval=1

[network]
label=.
command=iwconfig|grep "ESSID"|awk '{print $4}'|sed 's/ESSID://'|sed 's/"//g'
color=#ccffff
interval=1

[lightness]
label=☀.
command=echo $(expr $(cat /sys/class/backlight/intel_backlight/brightness) \* 100 / $(cat /sys/class/backlight/intel_backlight/max_brightness))%
color=#ccffff
interval=once
signal=2

[volume]
label=
interval=once
signal=1

[date]
command=date +'%m/%d %H:%M'
color=#ccffff
interval=1

[battery]
label=Battery:
command=acpi|awk '{print $4}'|tr -d ','
interval=30

[Dropbox]
label=.
command=dropbox-cli status|tr '\n' ';'
interval=1
