[git_status]
command=$HOME/dotfiles/git_status.rb
markup=pango
interval=1

[cpu_temperature]
command=$HOME/dotfiles/cpu_temperature.sh
format=json
interval=1

[memory]
label=.
command=$HOME/dotfiles/memory.sh
format=json
interval=1

[network]
label=.
command=iwconfig|grep "ESSID"|awk '{print $4}'|sed 's/ESSID://'|sed 's/"//g'
color=#ccffff
interval=1

[volume]
label=
interval=once
signal=1

[battery]
label=Battery:
command=acpi|awk '{print $4}'|tr -d ','
interval=30

[Dropbox]
label=.
command=dropbox-cli status|tr '\n' ';'
interval=1

[date]
command=date +'%m/%d(%a) %H:%M'
color=#ccffff
interval=1

[hibernate]
full_text=
command=sudo s2ram>/dev/null
