[memory]
label=.
command=echo -n $(free -h|awk 'match($0,/^Mem/){print $3 " / " $2}') ; echo -n "  :  " ;  echo -n $(free -b | awk 'match($0,/^Mem/){print int ($3*1000/$2)/10}') ; echo "%"
color=#8fa1b3
interval=1

[network]
label=
command=iwconfig|grep "ESSID"|awk '{print $4}'|sed 's/ESSID://'|sed 's/"//g'
color=#8fa1b3
interval=1

[lightness]
label=☀
command=echo $(expr $(cat /sys/class/backlight/intel_backlight/brightness) \* 100 / $(cat /sys/class/backlight/intel_backlight/max_brightness))%
color=#8fa1b3
interval=once
signal=2

[volume]
label=
interval=once
signal=1

[date]
command=date +'%m/%d %H:%M'
color=#8fa1b3
interval=1

[battery]
command=upower -i /org/freedesktop/UPower/devices/battery_BAT0|grep percentage|awk '{print $2}'
interval=30

[Dropbox]
command=echo -n "Dropbox: "; dropbox-cli status
interval=1
